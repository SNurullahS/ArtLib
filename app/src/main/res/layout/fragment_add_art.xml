<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".view.AddArt">

    <EditText
        android:id="@+id/addDescriptionText"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="text"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="420dp" />

    <EditText
        android:id="@+id/addArtYearText"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Art Year"
        android:inputType="text"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="357dp" />

    <EditText
        android:id="@+id/addArtistNameText"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Artist Name "
        android:inputType="text"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="292dp" />

    <ImageView
        android:id="@+id/imageSelectButtonClick"
        android:layout_width="275dp"
        android:layout_height="218dp"
        android:src="@drawable/addimage"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/addArtNameText"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Art Name"
        android:inputType="text"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/postButtonClick"
        android:layout_width="153dp"
        android:layout_height="60dp"
        android:text="Post It"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="500dp" />
</androidx.constraintlayout.widget.ConstraintLayout>






